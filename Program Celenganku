<body>

<div class="box">
    <h2>ðŸ’° Celenganku</h2>
    <p>Saldo: Rp <span id="saldo">0</span></p>

    <input type="number" id="jumlah" placeholder="Masukkan jumlah uang">

    <button onclick="tambah()">Tambah Uang</button>
    <button onclick="kurang()">Kurangi Uang</button>
</div>

<script>
    let saldo = 0;

    function tambah() {
        let jumlah = document.getElementById("jumlah").value;
        if (jumlah === "" || jumlah <= 0) {
            alert("Masukkan angka yang benar!");
        } else {
            saldo += parseInt(jumlah);
            document.getElementById("saldo").innerText = saldo;
            document.getElementById("jumlah").value = "";
        }
    }

    function kurang() {
        let jumlah = document.getElementById("jumlah").value;
        if (jumlah === "" || jumlah <= 0) {
            alert("Masukkan angka yang benar!");
        } else if (jumlah > saldo) {
            alert("Saldo tidak cukup!");
        } else {
            saldo -= parseInt(jumlah);
            document.getElementById("saldo").innerText = saldo;
            document.getElementById("jumlah").value = "";
        }
    }
</script>

</body>
